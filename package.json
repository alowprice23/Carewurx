{
  "name": "carewurx",
  "version": "1.0.0",
  "description": "A smart scheduling application for home healthcare services. Now a web application.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:frontend && node server.js",
    "dev": "npm run build:frontend && nodemon server.js",
    "build:frontend": "cd frontend && npm install && npm run build",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified for root. Run tests in /frontend separately.\" && exit 1",
    "test:e2e": "playwright test",
    "build": "npm run build:frontend",
    "seed": "node -e \"require('./services/seed-data').seedDatabase()\""
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.9.0",
    "groq-sdk": "^0.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^3.0.0"
  }
}
